{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "quotes": ["warn", "single"],
        "indent": ["warn", 2],
        "no-multi-spaces": [
            "warn",
            {
                "ignoreEOLComments": false
            }
        ],
        "no-trailing-spaces": "warn",
        "semi": ["warn", "never"]
    }
}
